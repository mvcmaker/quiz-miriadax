<form method="get" action="/quizes">
<input type="text" name="search" placeholder="Buscar pregunta">
<input type="submit" value="Buscar">
</form>
<table>
<% for(var i=0; i<quizes.length; i++) { %>
<tr><td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].question %></a></td>
<% if(session.user !== undefined) { %>
<td> (<%= quizes[i].category %>)</td>
<td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button">editar</button></a></td>
<td>
	<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
		<button type="submit" onclick="return confirm('Borrar: <%= quizes[i].question %>')">Borrar</button>
	</form>
</td>
<% } %>
</tr>
<% } %>
</table>
<% if(session.user !== undefined) { %>
<a href="/quizes/new"><button type="button">Crear nueva pregunta</button></a>
<% } %>